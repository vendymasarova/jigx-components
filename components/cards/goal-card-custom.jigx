type: component.default
children:
  - type: component.view
    options:
      style:
        gap: medium
        # height:
        #   min: 205
      children:
        - type: component.card
          options:
            direction: row
            children:
              - type: component.view
                options:
                  style:
                    flex:
                      grow: 1
                      direction: row
                    alignItems: center
                    gap: medium
                    padding: minimal
                    # height:
                    #   min: 205
                  children:
                    - type: component.view
                      options:
                        style:
                          justifyContent: center
                          alignItems: center
                        children:
                          - type: component.pie-chart
                            options:
                              chart:
                                title:
                                  text: 86%
                                  verticalAlign: center
                                width: 110
                                height: 110
                              series:
                                - data: =[{'y':86, 'color':'color3'},{'y':14, 'color':'transparent'}]
                                  layout: arch

                    - type: component.view
                      options:
                        style:
                          flex:
                            grow: 1
                            direction: column
                          justifyContent: space-between
                          alignItems: flex-end
                          # alignContent: space-between
                          gap: large
                        children:
                          # header
                          - type: component.view
                            options:
                              style:
                                flex:
                                  direction: row
                                alignItems: flex-start
                                gap: medium
                              children:
                                # icon
                                - type: component.icon
                                  options:
                                    icon: synchronize-arrows-1
                                    shape: circle
                                    type: duotone
                                    color: color1
                                # text + date
                                - type: component.view
                                  options:
                                    style:
                                      gap: minimal
                                    children:
                                      - type: component.text
                                        options:
                                          value: =@ctx.inputs.activityName
                                          size: medium
                                          weight: semi-bold
                                      - type: component.text
                                        options:
                                          value: =@ctx.inputs.date
                                          size: small
                                          emphasis: high

                          - type: component.view
                            options:
                              style:

                              children:
                                - type: component.text
                                  options:
                                    value: =@ctx.inputs.value
                                    size: regular
                                    weight: semi-bold
                                    emphasis: high
                          - type: component.view
                            options:
                              style:
                                flex:
                                  direction: row
                                gap: small
                              children:
                                - type: component.text
                                  options:
                                    value: =@ctx.inputs.linkName
                                    size: small
                                    emphasis: medium
                                    align: right
                                    weight: semi-bold
                                - type: component.icon
                                  options:
                                    icon: arrow-right